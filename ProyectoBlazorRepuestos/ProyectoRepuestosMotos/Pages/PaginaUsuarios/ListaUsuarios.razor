@page "/Usuarios"


<h1  class="text-center" style="color:blue">Lista de Usuarios</h1>


<div class"form-group row">
    <div class="col-sm-2">
        <a href="/Usuarios/Nuevo" class="btn btn-outline-primary">Nuevo Usuario</a>
    </div>
</div>


@if (usuariosLista == null)
{
    <div class="spinner"></div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Rol</th>
                <th>Esta Activo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in usuariosLista)
            {
                <tr>
                    <td>@user.CodigoUsuario</td>
                    <td>@user.Nombre</td>
                    <td>@user.Rol</td>
                    <td>
                        @if (@user.EstaActivo)
                        {
                            <span class="oi oi-circle-check" style="color:green;"></span>
                        }
                        else
                        {
                            <span class="oi oi-circle-x" style="color:red;"></span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-success" href="@($"/Usuarios/Editar/{user.CodigoUsuario}")">Editar</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}




